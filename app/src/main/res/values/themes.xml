<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Realcount" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Realcount" parent="Base.Theme.Realcount" />

    <style name="Button" />
    <style name="Button.Yellow">
        <item name="android:background">@drawable/bg_button_yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextView.PoppinsBoldBlack</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Button.Grey">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextView.PoppinsBoldWhite</item>
        <item name="android:textColor">@color/yellowDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="TextView" />
    <style name="TextView.PoppinsRegularGrey">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/greyColor</item>
    </style>

    <style name="TextView.PoppinsRegularBlack">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>
    <style name="TextView.PoppinsBoldBlack">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>
    <style name="TextView.PoppinsBoldWhite">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/whiteperl</item>
    </style>
</resources>