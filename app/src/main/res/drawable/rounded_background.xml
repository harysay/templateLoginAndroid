<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
    <corners android:radius="4dp" /> <!-- Sesuaikan nilai radius sesuai keinginan -->

    <solid android:color="#B4D4FF" /> <!-- Warna latar belakang -->
    <!-- Tambahkan stroke untuk border -->
    <stroke
        android:width="2dp"
        android:color="#DAE6F6" /> <!-- Warna border -->
</shape>